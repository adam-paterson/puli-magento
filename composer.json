{
    "name": "adampaterson/puli-magento",
    "description": "A Puli extension for the Magento framework.",
    "keywords": ["magento", "magento deploy", "puli", "puli extension", "puli plugin"],
    "license": "MIT",
    "authors": [
        {
            "name": "Adam Paterson",
            "email": "hello@adampaterson.co.uk"
        }
    ],
    "require": {
        "php": ">=5.3.9",
        "puli/repository": "^1.0-beta8"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.6",
        "sebastian/version": "^1.0.1",
        "squizlabs/php_codesniffer": "^2.0@dev"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Puli\\MagentoExtension\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Puli\\MagentoExtension\\Tests\\": "tests/",
            "Puli\\Repository\\Tests\\": "vendor/puli/repository/tests/"
        }
    },
    "support": {
        "issues": "https://github.com/adam-paterson/issues/issues"
    }
}
